# ==============================================
# BACKEND - Variables de Entorno
# ==============================================

# Puerto del servidor (Opcional - default: 3002)
PORT=3002

# Base de datos SQLite (Opcional - default: data/inventario.db)
DATABASE_PATH=data/inventario.db

# TypeORM - Sincronización automática (Opcional - default: true)
# ADVERTENCIA: En producción usar false y migrations
TYPEORM_SYNCHRONIZE=true

# TypeORM - Logging (Opcional)
# Valores: true | false | all | error | warn | info | log | query | schema
TYPEORM_LOGGING=error,warn

# Modo de desarrollo (Opcional)
NODE_ENV=development
